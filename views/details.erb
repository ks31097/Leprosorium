<h2>Post details</h2>
<p>
    <!-- @row наш комментарий из БД -->
    <%= @row['content'] %>
    <br />
    Added at <%= @row['created'] %>
</p>

<h4>Comments:</h4>
<p>
  <!-- Генерация формы пост с динамически генерируемым id в зависимости от страницы -->
  <form action="/details/<%= @row['id'] %>" method="POST">

    <div class="form-floating">
      <textarea name="content" class="form-control" placeholder="Type post text here" id="floatingTextarea2" style="height: 150px"></textarea>
      <label for="floatingTextarea2">Type comment text here</label
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Add comment</button>
  </form>
</p>
